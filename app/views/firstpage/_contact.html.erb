 <section id="contact">
   <div class="dark-mask"></div>
        <div class="container">
            <div class="box last">
                <div class="row">
                    <div class="col-sm-6">
                        <h1>Contact Form</h1>
                        <p>If you have interest in our team, please contact anytime and anywhere...</p>
                        <div class="status alert alert-success"></div>
                        <%= form_for(:user, method:'get', remote:'true') do |f| %>
                             <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.text_field :name, class:"form-control", required:"true", placeholder:'Name' %>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <%= f.text_field :email, class:"form-control", required:"true", placeholder:'Email address' %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <%= f.text_area :message, class:"form-control", required:"true", placeholder:'Message', rows:'8' %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.submit "Send Message", class:'btn btn-danger btn-lg' %>                                       
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div><!--/.col-sm-6-->
                    <div class="col-sm-6">
                        <h1>Our Address</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <address>
                                    <strong>CoolPlum, Inc.</strong><br>
                                    Kej Dimitar Vlahov 5<br>
                                    Skopje 1500, Macedonia<br>
                                    <abbr title="Phone">Skype:</abbr> cool.plum
                                </address>
                            </div>
                            <div class="col-md-6">
                                <address>
                                    <strong>CoolPlum, Inc.</strong><br>
                                    Kej Dimitar Vlahov 5<br>
                                    Skopje 1500, Macedonia<br>
                                    <abbr title="Phone">Skype:</abbr> alex-kit
                                </address>
                            </div>
                        </div>
                        <h1>Connect with us</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="social">
                                    <li><a href="http://www.facebook.com"><i class="icon-facebook icon-social"></i> Facebook</a></li>
                                    <li><a href="https://www.plus.google.com"><i class="icon-google-plus icon-social"></i> Google Plus</a></li>
                                    <li><a href="https://www.pinterest.com"><i class="icon-pinterest icon-social"></i> Pinterest</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6">
